<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>CharsetFilter</filter-name>
        <filter-class>filters.CharsetFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>KienNghiController</servlet-name>
        <servlet-class>controllers.KienNghiController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GuiKienNghiController</servlet-name>
        <servlet-class>controllers.GuiKienNghiController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SapXepController</servlet-name>
        <servlet-class>controllers.SapXepController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GopKienNghiController</servlet-name>
        <servlet-class>controllers.GopKienNghiController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChinhSuaGopController</servlet-name>
        <servlet-class>controllers.ChinhSuaGopController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>KienNghiController</servlet-name>
        <url-pattern>/quanly</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GuiKienNghiController</servlet-name>
        <url-pattern>/guikiennghi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SapXepController</servlet-name>
        <url-pattern>/quanly_sapxep</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GopKienNghiController</servlet-name>
        <url-pattern>/gopKienNghi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChinhSuaGopController</servlet-name>
        <url-pattern>/chinhSua</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
